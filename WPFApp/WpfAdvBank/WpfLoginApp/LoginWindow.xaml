<Window x:Class="WpfLoginApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLoginApp"
        mc:Ignorable="d"
        Title="Login" Height="346.721" Width="354.918"
        Background="#FF5DBEEC"  Initialized="Window_Initialized" >
    <Grid Margin="20" Background="White">

        <StackPanel Margin="20">
            <Label Content="로그인" FontSize="20" HorizontalAlignment="Center" FontWeight="Bold" />
            <Separator Background="Orange" />
            <Label Content="UserID" FontSize="16" />
            <TextBox x:Name="TxtUserId" FontFamily="14" Height="25" KeyDown="TxtUserId_KeyDown" />
            <Label Content="Password" FontSize="16" />
            <PasswordBox x:Name="TxtPassword" FontFamily="14" Height="25" KeyDown="TxtPassword_KeyDown" />
            <Button x:Name="BtnLogin" Content="로그인" FontSize="16" Width="100" Height="30" Margin="0, 15" Click="BtnLogin_Click" />
        </StackPanel>

    </Grid>
</Window>
